{
  "name": "taskforge-cli",
  "version": "0.0.1",
  "description": "A cli tool to leverage env related headache",
  "lint-staged": {
    "src/**/*.ts": "pnpm format"
  },
  "scripts": {
    "prebuild": "rimraf ./dist",
    "build": "pkgroll",
    "format": "prettier --write src/**/*.ts",
    "test": "tsx --test",
    "pre-commit": "lint-staged"
  },
  "bin": {
    "tf": "dist/bin/index.js"
  },
  "types": ".dist/**/*.d.ts",
  "exports": {
    "./config": {
      "types": {
        "default": "./dist/exports/config.d.ts"
      },
      "require": {
        "default": "./dist/exports/config.cjs"
      },
      "import": {
        "default": "./dist/exports/config.mjs"
      }
    }
  },
  "keywords": [],
  "files": [
    "dist",
    "package.json"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nirvikpurkait/taskforge-cli.git"
  },
  "contributors": [
    {
      "email": "nirvikpurkait@gamil.com",
      "name": "Nirvik Purkait"
    }
  ],
  "bugs": {
    "url": "https://github.com/nirvikpurkait/taskforge-cli/issues"
  },
  "homepage": "https://github.com/nirvikpurkait/taskforge-cli",
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.20.0",
  "dependencies": {
    "dotenv": "^17.2.3",
    "jiti": "^2.6.1",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "pkgroll": "^2.21.4",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
