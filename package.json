  "devDependencies": {
    "@types/node": "^25.0.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "pkgroll": "^2.21.4",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3"
